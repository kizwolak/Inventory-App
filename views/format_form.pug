extends layout 

block content 
    h1 #{title}

    form(method='POST' action='')
        .form-group
            label(for='name') Format name: 
            input#name.form-control(type='text' placeholder='120g Vinyl, promo casette etc.' name='name' value=(undefined===format ? '' : format.name))
        button.btn.btn-primary(type='submit') Submit
    if errors
        ul 
            for error in errors 
                li!= error.msg