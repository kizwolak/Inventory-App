extends layout 

block content 
    h1= title 

    form(method='POST' action='')
        .form-group
            label(for='name') Name: 
            input#name.form-control(type='text', placeholder='Name of item' name='name' required='true' value=(undefined===item ? '' : item.name))
        .form-group
            label(for='author') Author: 
            select#author.form-control(type='select', placeholder='Select author', name='author' required='true')
                - authors.sort(function (a, b) {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return (textA < textB) ? -1 : (textA > TextB) ? 1 : 0});
                for author in authors
                    if item 
                        option(value=author._id selected=(author._id.toString()===item.author._id.toString() ? 'selected' : false)) #{item.name}
                    else 
                        option(value=author._id) #{author.name}
        .form-group 
            label(for='description') Description: 
            textarea#description.form-control(type='textarea' placeholder='Description' name='description' required='false') #{undefined===item ? '' : item.description} 
        .form-group
            label(for='format') Format: 
            select#format.form-control(type='select', placeholder='Select format', name='format' required='true')
                - formats.sort(function (a, b) {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return (textA < textB) ? -1 : (textA > TextB) ? 1 : 0});
                for format in formats
                    if item 
                        option(value=format._id selected=(format._id.toString()===item.author._id.toString() ? 'selected' : false)) #{item.format}
                    else 
                        option(value=format._id) #{format.name}
        .form-group
            label Category: 
            div 
                for category in categories 
                    div(style='display: inline; padding-right: 10px;' )
                        input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked)
                        label(for='category._id') #{category.name}
        .form-group 
            label(for='price') Price: 
            textarea#price.form-control(type='number' placeholder='Price' name='price' required='true') #{undefined===item ? '' : item.price} 
        .form-group 
            label(for='in_stock') In stock: 
            textarea#in_stock.form-control(type='number' placeholder='In stock' name='in_stock' required='true') #{undefined===item ? '' : item.in_stock} 
        button.btn.btn-primary(type='submit') Submit